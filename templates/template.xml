						<except if-internal="OLP_MODE"/>
		</file>
		<file src="buildcolor.py" class="Kinematics"/>
		<file src="buildkinematics.py" class="Kinematics"/>
		<file src="symbols.hh" class="Kinematics"/>
		<file src="spinney.hh" class="Verbatim"/>
